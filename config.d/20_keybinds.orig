# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $i3path/i3-volume && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $i3path/i3-volume && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $i3path/i3-volume && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
#
# # Sreen brightness controls
# bindsym XF86MonBrightnessUp exec xrandr --output eDP-1 --brightness 0.8
# bindsym XF86MonBrightnessDown exec xrandr --output eDP-1 --brightness 0.4
bindsym XF86MonBrightnessUp exec $i3path/i3-brightness -A 2
bindsym XF86MonBrightnessDown exec $i3path/i3-brightness -U 2

# bindsym XF86Display exec $i3path/i3-
bindsym XF86RFKill exec $i3path/i3-plane-mode

bindsym XF86AudioPrev exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $i3path/i3-input-volume && $refresh_i3status
bindsym XF86AudioPlay exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -10% && $i3path/i3-input-volume && $refresh_i3status
bindsym XF86AudioPause exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -10% && $i3path/i3-input-volume && $refresh_i3status
bindsym XF86AudioNext exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ +10% && $i3path/i3-input-volume && $refresh_i3status


